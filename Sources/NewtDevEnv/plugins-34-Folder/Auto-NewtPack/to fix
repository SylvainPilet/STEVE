     extractChunk:       progress:?update(offset); //,nil,true);     stuffChunk:       if ctype<>0x40 then Progress:?update(offset); //, nil, true);...       				then SetValue(progress.currentPath, 'text, SPrintObject(slot));     savePackage:       	if progress       	then SetValue(progress.currentPath, 'text, "<Installing...>");       	progress:?update(nextChunk);...       	progress:?close(); RefreshViews();init:       	self.progress := BuildContext(  // not opened.  see :update       		{_proto: protoProgress, // assumes exists ***       		maxProgressValue:       			if sizeHint       			then sizeHint       			else if Length(segments)=0       			then 40000       			else Length(segments)*kSegSize,       		progressLabel:       			$[ & kVersionString & (if smallPackage then "+S") & $] &&       			(if isArray(segs) then "Saving" else "Reading") &&       			"Pkg(" & pkgType & "):" && psym,       		//heapButton: heapButton, // from Newt       		});       	progress:open();testpackage:...       	progress:?close();